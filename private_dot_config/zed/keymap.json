[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-=": "editor::SelectLargerSyntaxNode", // Expand Selection
      "ctrl-k": "editor::DeleteToEndOfLine",
      "ctrl-shift-k": "editor::DeleteLine",
      "alt-;": ["editor::ToggleComments", { "advance_downwards": false }]
    }
  }
]
