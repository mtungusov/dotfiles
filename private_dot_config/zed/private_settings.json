// Zed settings
{
  // --- LLM Start ---
  "assistant": {
    "default_model": {
      "provider": "lmstudio",
      "model": "qwen2.5-coder-14b-instruct-mlx"
    },
    "version": "2"
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "http://localhost:1234"
    },
    "lmstudio": {
      "api_url": "http://localhost:1234/api/v0"
    }
  },
  // --- LLM End ---
  // ---
  // --- Edit Prediction Start ---
  "edit_predictions": {
    "mode": "auto"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  // --- Edit Prediction End ---
  // ---
  // --- Langs and LSP ---
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    },
    "Python": {
      "indent_guides": {
        "enabled": true
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop", "..."]
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": ["golangci-lint", "run", "--out-format", "json", "--issues-exit-code=1"]
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "onTypeFormatting": false
        }
      }
    }
  },
  // --- Langs and LSP End ---
  // ---
  "buffer_font_family": "Input Mono Compressed",
  "buffer_font_fallbacks": ["Zed Plex Mono"],
  "buffer_font_size": 18,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "preferred_line_length": 100,
  "restore_on_startup": "none",
  "soft_wrap": "bounded",
  "tabs": {
    "git_status": false
  },
  "terminal": {
    "font_size": 14,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "Ezio Light",
    "dark": "New Darcula"
  },
  "ui_font_size": 16
}
