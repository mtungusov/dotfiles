{
    "editor.fontFamily": "'Maple Mono','JetBrains Mono','Fira Code',Menlo,Monaco,'Courier New',monospace",
    "editor.fontSize": 16,
    "editor.fontLigatures": "'calt'",
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "go.lintTool": "golangci-lint",
    "go.toolsManagement.autoUpdate": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "terminal.integrated.fontFamily": "'Maple Mono NF','IosevkaTerm Nerd Font Mono',Menlo,Monaco,'Courier New',monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontLigatures.enabled": true,
    // == Dark Theme ==
    "workbench.colorTheme": "JetBrains Darcula Theme",
    "editor.tokenColorCustomizations": {
        "comments": "#aa3300"
    },
    // == Dark Theme End ==
    // == Light Theme ==
    // "workbench.colorTheme": "sema light",
    // "workbench.colorCustomizations": {
    //     "editor.background": "#eeeeee" // Replace with your desired hex color code
    // },
    // "editor.tokenColorCustomizations": {
    //     "comments": "#aa3300"
    // },
    // == Light Theme End ==
    "workbench.startupEditor": "none",
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.showTabs": "single",
    "vscode-neovim.compositeKeys": {
        "jk": {
            // Use lua to execute any logic
            "command": "vscode-neovim.lua",
            "args": [
                [
                    "local code = require('vscode')",
                    "code.action('vscode-neovim.escape')",
                    "code.action('workbench.action.files.save')",
                ],
            ],
        },
    },
    "editor.unicodeHighlight.allowedCharacters": {
        "—Å": true
    },
}